@require '{ohif:design}/app'

.measurementTableTimepointHeader
  flex: 1
  justify-content: space-around
  padding-top: 2px
  position: relative
  margin: 0.8em 0

  .timepointDateLabel, .timepointDate
    theme('border-left', '%s solid $uiBorderColor' % $uiBorderThickness)
    font-weight: 400
    padding-left: 12px
    text-align: left

  .timepointDateLabel
    theme('color', '$textSecondaryColor')
    font-size: 12px
    line-height: 12px

  .timepointDate
    theme('color', '$textPrimaryColor')
    font-size: 14px
    line-height: 20px
    padding-bottom: 6px

